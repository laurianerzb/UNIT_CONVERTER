<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:background">@color/blue_dark</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyHintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">#546E7A</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#3F51B5</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyResultTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#E0E0E0</item>
    </style>




</resources>